<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicationTracker.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
            <StackLayout Orientation="Horizontal">
                <Label Text="Remove old reminders after:" VerticalOptions="Center" />
                <Entry Text="{Binding Settings.SecondsToRemoveOldReminders}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Dark Mode" VerticalOptions="Center" />
                <Switch FlowDirection="LeftToRight" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>