<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MedicationTracker"
             x:Class="MedicationTracker.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
            <StackLayout Orientation="Horizontal">
                <Label Text="Remove old reminders after:" VerticalOptions="Center" />
                <Entry Text="{Binding Settings.SecondsToRemoveOldReminders}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Notification Sound" VerticalOptions="Center" />
                <StackLayout Orientation="Vertical">
                    <StackLayout WidthRequest="200" HeightRequest="48" BackgroundColor="{x:Static local:Theme.Secondary}">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Settings.SetLightSoundCommand}" />
                        </StackLayout.GestureRecognizers>
                        <Label Text="Light Sound" HorizontalOptions="Center" TextColor="{x:Static local:Theme.Tertiary}" />
                    </StackLayout>
                    <StackLayout WidthRequest="200" HeightRequest="48" BackgroundColor="{x:Static local:Theme.Secondary}">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Settings.SetRoughSoundCommand}" />
                        </StackLayout.GestureRecognizers>
                        <Label Text="Rough Sound" HorizontalOptions="Center" TextColor="{x:Static local:Theme.Tertiary}" />
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>